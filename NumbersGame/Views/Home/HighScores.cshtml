@model IEnumerable<NumbersGame.Models.Game>

@{
    ViewBag.Title = "Numbers Game - High Scores";
}

<div id="high-scores">
    <h2>High Scores</h2>
    <table id="high-scores-table">
        <tr>
            <th>@* Empty *@</th>
            <th>
                Name
            </th>
            <th>
                Moves
            </th>
            <th>
                Game
            </th>
        </tr>

        @for (int i = 0; i < Model.Count(); i++)
        {
            <tr>
                <td>@(i + 1).</td>
                <td>@Model.ElementAt(i).Name</td>
                <td>@Model.ElementAt(i).GetScore()</td>
                <td>@Html.ActionLink("View Game", "Game", new { @gameId = Model.ElementAt(i).GameId })</td>
            </tr>
        }
    </table>
    <div class="controls">
        @Html.ActionLink("New Game", "Game", null, new { @class = "link-button" })
    </div>
</div>
